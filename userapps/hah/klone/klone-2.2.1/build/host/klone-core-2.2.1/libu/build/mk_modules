# $Id: mk_modules,v 1.5 2008/06/25 10:10:15 tho Exp $

#
# --no_hmap
#
makl_args_def   \
    "no_hmap"   \
    "" ""       \
    "disable hmap module"

__makl_no_hmap () 
{ 
    makl_set_var "NO_HMAP" ; 
}

#
# --no_config
#
makl_args_def   \
    "no_config" \
    "" ""       \
    "disable config module"

__makl_no_config () 
{ 
    makl_set_var "NO_CONFIG" ; 
}

