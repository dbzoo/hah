// Use to conditionally enable the GRAPH L2-Tab only when pachube is also enabled.
int isPachubeEnabled() {
  char ph_enable[2];
  ini_gets("pachube","enable","0",ph_enable,sizeof(ph_enable),con.inifile);
  return ph_enable[0] == '1';
}

