#!/bin/sh

. /etc/ini.conf

case "$1" in
    start)
	
	if [ `iniget $INI network ssh_enable 1` -eq 1 ]; then
		if ! pidof dropbear | sed "s/$$\$//" | grep -q [0-9] ; then
		        port=`iniget $INI network ssh_port 22`
	    		dropbear -p $port
		fi
	fi
        ;;
    stop)
        killall dropbear 2>/dev/null
        ;;
    restart)
	$0 stop
	$0 start
	;;
    status)
        if pidof dropbear | sed "s/$$\$//" | grep -q [0-9] ; then
		echo "running"
	else
		echo "stopped"
        fi
        ;;
esac
