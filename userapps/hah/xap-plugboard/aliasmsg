#!/usr/bin/lua
-- $Id: aliasmsg 554 2014-02-01 08:45:51Z dbzoo.com $
lapp = require("pl.lapp")
local args = lapp
[[
  Various flags and option types
      <alias> (string)       Alias command
]]
require("xap")

local cmd = string.format([[
xap-header
{
class=alias
}
command
{
text=%s
}]],args.alias)

xap.init{instance="aliasmsg", uid="FF00DF00"}
xap.sendShort(cmd)
