void menu_item(FILE *out, session_t *ss, response_t *rp, char *script, char *label, int linked) {
	 if(isScriptAllowed(ss, rp, script)) {
	      if (linked) {
		  io_printf(out,"<li><a href=\"%s\">%s</a></li>", script, label);
	      } else {
		  io_printf(out,"<li><span>%s</span></li>", label);
	      }
	 }
}
